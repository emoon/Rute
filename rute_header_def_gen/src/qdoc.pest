// Namelist and various other tags

namelist = { (name)* }

name = @{
	(('a'..'z') | ('A'..'Z') | ("_") | ("\"") | (",") | (":") | ('0'..'9') | ("{") | ("}") | (" ") | ("(") | (")") | ("+") | ("#") | ("&") | ("'") | (";")) ~
	(('a'..'z') | ('A'..'Z') | ("_") | (".") | ("-") | ("(") | (")") | ('0'..'9'))*
}

cpp_name = @{
	(('a'..'z') | ('A'..'Z') | ("_")) ~ (('a'..'z') | ('A'..'Z') | ("::") | ("_") | ('0'..'9') | ("*") | ("&"))*
}

cpp_type = { cpp_name }

cpp_body = _{ "{" ~ ( cpp_body | (!"}" ~ ANY) )* ~ "}" }

whole_line = @{ (!NEWLINE ~ ANY)* }
skip_line = @{ (!NEWLINE ~ ANY)+ }

WHITESPACE = _{ "\t" | "\r" | "\n"  | " " }

