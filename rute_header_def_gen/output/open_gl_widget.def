enum UpdateBehavior {
    NoPartialUpdate,
    PartialUpdate,
}

struct OpenGLWidget : Widget {
    set_update_behavior(update_behavior: OpenGLWidget::UpdateBehavior),
    update_behavior() -> OpenGLWidget::UpdateBehavior,
    set_format(format: &SurfaceFormatType),
    format() -> SurfaceFormat,
    texture_format() -> GLenum,
    set_texture_format(tex_format: GLenum),
    is_valid() -> bool,
    make_current(),
    done_current(),
    context() -> OpenGLContext?,
    default_framebuffer_object() -> GLuint,
    grab_framebuffer() -> Image,
    [event] about_to_compose(),
    [event] frame_swapped(),
    [event] about_to_resize(),
    [event] resized(),
    [override] initialize_gl(),
    [override] resize_gl(w: i32, h: i32),
    [override] paint_gl(),
    [override] paint_event(e: &PaintEventType),
    [override] resize_event(e: &ResizeEventType),
    [override] event(e: &EventType) -> bool,
    [override] redirected(p: &PointType) -> PaintDevice?,
    [override] paint_engine() -> PaintEngine?,
}

