struct OpenGLWidget : Widget {
    set_update_behavior(OpenGLWidget::UpdateBehavior update_behavior),
    update_behavior() -> OpenGLWidget::UpdateBehavior,
    set_format(&SurfaceFormatType format),
    format() -> SurfaceFormatType,
    texture_format() -> GLenum,
    set_texture_format(GLenum tex_format),
    is_valid() -> bool,
    make_current(),
    done_current(),
    context() -> &OpenGLContextType,
    default_framebuffer_object() -> GLuint,
    grab_framebuffer() -> ImageType,
    about_to_compose(),
    frame_swapped(),
    about_to_resize(),
    resized(),
    initialize_gl(),
    resize_gl(i32 w, i32 h),
    paint_gl(),
    paint_event(&PaintEventType e),
    resize_event(&ResizeEventType e),
    event(&EventType e) -> bool,
    redirected(&PointType p) -> &PaintDeviceType,
    paint_engine() -> &PaintEngineType,
}

