[org_name(QSurface)]
enum SurfaceClass {
    Window,
    Offscreen,
}

[org_name(QSurface)]
enum SurfaceType {
    RasterSurface,
    OpenGLSurface,
    RasterGLSurface,
    OpenVGSurface,
    VulkanSurface,
}


struct Surface {
    surface_class() -> Surface::SurfaceClass,
    [event] format() -> SurfaceFormat,
    [event] surface_handle() -> PlatformSurface?,
    [event] surface_type() -> Surface::SurfaceType,
    supports_open_gl() -> bool,
    [event] size() -> Size,
}

