enum SurfaceClass {
    Window,
    Offscreen,
}

enum SurfaceType {
    RasterSurface,
    OpenGLSurface,
    RasterGLSurface,
    OpenVGSurface,
    VulkanSurface,
}


struct Surface {
    surface_class() -> Surface::SurfaceClass,
    [replace] format() -> SurfaceFormat,
    [replace] surface_handle() -> PlatformSurface?,
    [replace] surface_type() -> Surface::SurfaceType,
    supports_open_gl() -> bool,
    [replace] size() -> Size,
}

