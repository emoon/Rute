enum Mode {
    Direct,
    Indexed,
    Gray,
}


struct Colormap {
    [static] initialize(),
    [static] cleanup(),
    [static] instance(screen: i32) -> Colormap,
    mode() -> Colormap::Mode,
    depth() -> i32,
    size() -> i32,
    pixel(color: &ColorType) -> uint,
    color_at(pixel: uint) -> Color,
    colormap() -> [Color],
}

