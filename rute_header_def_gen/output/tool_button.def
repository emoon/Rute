enum ToolButtonPopupMode {
    DelayedPopup,
    MenuButtonPopup,
    InstantPopup,
}

struct ToolButton : AbstractButton {
    [override] size_hint() -> Size,
    [override] minimum_size_hint() -> Size,
    tool_button_style() -> Rute::ToolButtonStyle,
    arrow_type() -> Rute::ArrowType,
    set_arrow_type(type: Rute::ArrowType),
    set_menu(menu: &MenuType),
    menu() -> Menu?,
    set_popup_mode(mode: ToolButton::ToolButtonPopupMode),
    popup_mode() -> ToolButton::ToolButtonPopupMode,
    default_action() -> Action?,
    set_auto_raise(enable: bool),
    auto_raise() -> bool,
    show_menu(),
    set_tool_button_style(style: Rute::ToolButtonStyle),
    set_default_action(arg0: &ActionType),
    [override] event(e: &EventType) -> bool,
    [override] mouse_press_event(arg0: &MouseEventType),
    [override] mouse_release_event(arg0: &MouseEventType),
    [override] paint_event(arg0: &PaintEventType),
    [override] action_event(arg0: &ActionEventType),
    [override] enter_event(arg0: &EventType),
    [override] leave_event(arg0: &EventType),
    [override] timer_event(arg0: &TimerEventType),
    [override] change_event(arg0: &EventType),
    [override] hit_button(pos: &PointType) -> bool,
    [override] next_check_state(),
    init_style_option(option: &StyleOptionToolButtonType),
}

