[org_name(QToolButton)]
enum ToolButtonPopupMode {
    DelayedPopup,
    MenuButtonPopup,
    InstantPopup,
}

struct ToolButton : AbstractButton {
    [replace] size_hint() -> Size,
    [replace] minimum_size_hint() -> Size,
    tool_button_style() -> Rute::ToolButtonStyle,
    arrow_type() -> Rute::ArrowType,
    set_arrow_type(type: Rute::ArrowType),
    set_menu(menu: *MenuType),
    menu() -> Menu?,
    set_popup_mode(mode: ToolButton::ToolButtonPopupMode),
    popup_mode() -> ToolButton::ToolButtonPopupMode,
    default_action() -> Action?,
    set_auto_raise(enable: bool),
    auto_raise() -> bool,
    show_menu(),
    set_tool_button_style(style: Rute::ToolButtonStyle),
    set_default_action(arg0: *ActionType),
    [replace] event(e: *EventType) -> bool,
    [replace] mouse_press_event(arg0: *MouseEventType),
    [replace] mouse_release_event(arg0: *MouseEventType),
    [replace] paint_event(arg0: *PaintEventType),
    [replace] action_event(arg0: *ActionEventType),
    [replace] enter_event(arg0: *EventType),
    [replace] leave_event(arg0: *EventType),
    [replace] timer_event(arg0: *TimerEventType),
    [replace] change_event(arg0: *EventType),
    [replace] hit_button(pos: &PointType) -> bool,
    [replace] next_check_state(),
    init_style_option(option: *StyleOptionToolButtonType),
}

